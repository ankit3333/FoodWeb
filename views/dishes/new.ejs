<% include ../partials/header %>

<div class = "container">

<div class="row">
<h1 style="text-align:center;font-weight:bold;">Add a New Dish</h1>
<div style="width:30% ; margin: 30px auto;">
<form action="/dishes" method="POST">
    <div class="form-group">
        <label for="name" style="font-weight:bold;">Name of the Dish:</label>
    <input class="form-control" type="text" name="name" placeholder="name">
    </div>
    <div class="form-group">
        <label for="price" style="font-weight:bold;">Ratings for the dish:</label>
    <input class="form-control" type="number" name="price" placeholder="ratings" min="0.5" max="5" step="0.5">
    </div>
    <div class="form-group">
        <label for="image" style="font-weight:bold;">Image address:</label>
    <input class="form-control"  type="text" name="image" placeholder="image url">
    </div>
    <div class="form-group">
        <label for="description" style="font-weight:bold;">Review:</label>
    <textarea class="form-control"  type="text" name="description" placeholder="Add your Review"></textarea>
    </div>
     <div class="form-group">
        <label for="restaurant" style="font-weight:bold;">Restaurant Name:</label>
    <input class="form-control"  type="text" name="restaurant" placeholder="Name of the Restaurant">
    </div>
    <div class="form-group">
    <label for="location" style="font-weight:bold;">Location:</label>
    <input class="form-control" type="text" name="location" id="location" placeholder="Leonardi's Pizzeria, Buffalo">
    </div>
    <div class="form-group">
    <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
    </div>
</form>
<a href="/dishes">Go Back</a>
</div>
</div>
</div>
<% include ../partials/footer %>
