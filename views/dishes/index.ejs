<% include ../partials/header %>


<div class = "container">
    
 <header class="jumbotron content" id = "divback">
     <div class="container" id = "jumboback" >
     <h1>Welcome to FoodWeb!</h1>
     <p> Have a taste of the best dishes around the world!!</p>
     <p>
     <a class="btn btn-primary btn-lg" href="/dishes/new">Add a New Dish</a>
     </p>
        <p>
         <form action="/dishes" method="GET" class="form-inline">
             <div class="form-group">
                <input id= "textboxid" type="text" name="search" placeholder="Search favorite food" class="form-control">
                <input id="textboxid"  type="submit" value="Search" class="btn btn-default btn-primary" style="font-face: 'Comic Sans MS';">
             </div>
             <br>
             <br>
             <div class="form-group">
                <input id="textboxid" type="text" name="search_res" placeholder="Search favorite restaurant" class="form-control">
                <input id="textboxid" type="submit" value="Search" class="btn btn-default btn-primary" style="background-color: font-face: 'Comic Sans MS';" >
             </div>
         </form>
     </p>
     </div>
</header>


<div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% dishes.forEach(function(dish){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail" href="/dishes/<%=dish._id%>" >
                    
                   <img src="<%= dish.image %>" href="/dishes/<%=dish._id%>">
                   <div class="caption">
                       <h4>Restaurant Name:<%= dish.restaurant%></h4>
                       <h4><%= dish.name %></h4>
                   </div>
                  
                   <p>
                       <a href="/dishes/<%=dish._id%>" class="btn btn-primary">Check out more!</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>


<h1 id="notFound"><%= notFound %> </h1>

<div class="row text-center">
    <% if (pages && pages > 0) { %>
    <ul class="pagination text-center">
        <% if (current == 1) { %>
        <li class="disabled"><a>First</a></li>
        <% } else { %>
        <li><a href="/dishes<%if(search){%>?search=<%=search%><%}%>">First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="disabled"><a>«</a></li>
        <% } else { %>
        <li><a href="/dishes?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a><%= i %></a></li>
        <% } else { %>
        <li><a href="/dishes?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>»</a></li>
        <% } else { %>
        <li><a href="/dishes?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>Last</a></li>
        <% } else { %>
        <li><a href="/dishes?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</div>
<% include ../partials/footer %>
